<!DOCTYPE html>

<html><head>
  <title>Create Listing</title>
  <% include includes/header.ejs %>
</head>

<body>
  <% include partials/navbarlogin.ejs %>

  <div class="container-fluid">
    <!--Sign up-->
    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <h2><span class="fa fa-book"></span> Create a listing</h2>
        <!-- show any messages that come back with authentication -->
        <% if (message !== '') { %>
          <% if (message.length > 15) { %>
              <div class="alert alert-danger"><%= message %></div>
          <% } else { %>
              <div class="alert alert-success"><%= message %></div>
          <% } %>
        <% } %>
      </div>
    </div>

    <!-- profile picture -->
      <div class="col-md-3 col-md-offset-2">
        <label for="profilePicture">Product Photo</label>
        <div class="form-group">
          <img data-src="holder.js/200x200/auto/vine" class="img-thumbnail" alt="200x200" src="data:image/svg+xml;base64," data-holder-rendered="true"><br>
          <span class="text-muted">Upload a picture of the book</span>
          <input type="file" id="profilePicture"> <!--Fix to replace image-->
        </div> <!--form-group-->
      </div> 

  <div class="col-md-5">
    <!-- SignUp FORM -->
    <form action="/createlisting" method="post">
      <div class="form-horizontal">

        <div class="form-group">
          <label for="username" class="col-sm-4 control-label">Username*</label>
          <div class="col-sm-8">
            <input type="username" class="form-control" name="username" placeholder="Your username">
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="isbn13" class="col-sm-4 control-label">ISBN(13)</label>
          <div class="col-sm-8">
            <input type="isbn13" class="form-control" name="isbn13" maxlength="13" placeholder="ISBN-13">
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="" class="col-sm-4 control-label">Title</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" name="title" placeholder="Title">
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="" class="col-sm-4 control-label">Author</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" name="author" placeholder="Author(s)">
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="description" class="col-sm-4 control-label">Description</label>
          <div class="col-sm-8">
            <textarea class="form-control" name="description" maxlength="500" rows="6" placeholder="Write a description of the book. (500 characters)"></textarea>
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <label class="col-sm-4 control-label">Do you want to...</label>
          <div class="col-sm-8">
            <!-- <input type="isbn13" class="form-control" name="isbn13" placeholder="ISBN 13"> -->
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="forSale" class="col-sm-4 control-label">Sell this book?</label>
          <div class="col-sm-3">
            <!-- <input type="forSale" class="form-control" name="forSale" placeholder="Are you selling this?(True/False)"> -->
            <div class="input-group">
              <label class="radio-inline"><input type="radio" name="forSale" value="t">Yes</label>
              <label class="radio-inline"><input type="radio" name="forSale" value="f">No</label>
            </div>
          </div> <!--col-sm-4-->
          <div class="col-sm-4">
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <input type="sellPrice" name="sellPrice" min="0.01" max="999.99" step="0.01" class="form-control currency" placeholder="0.00" />
            </div>
          </div> <!--col-sm-4-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="forRent" class="col-sm-4 control-label">Rent this book?</label>
          <div class="col-sm-3">
            <!-- <input type="forRent" class="form-control" name="forRent" placeholder="Are you renting this?(True/False)"> -->
            <div class="input-group">
              <label class="radio-inline"><input type="radio" name="forRent" value="t">Yes</label>
              <label class="radio-inline"><input type="radio" name="forRent" value="f">No</label>
            </div>
          </div> <!--col-sm-8-->
          <div class="col-sm-4">
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <input type="rentPrice" name="rentPrice" min="0.01" max="999.99" step="0.01" class="form-control currency" placeholder="0.00"/>
            </div>
          </div>
        </div> <!--form-group-->

        <div class="form-group">
          <label for="forBorrow" class="col-sm-4 control-label">Share this book?</label>
          <div class="col-sm-3">
            <!-- <input type="forBorrow" class="form-control" name="forBorrow" placeholder="Are you borrowing this?(True/False)"> -->
            <div class="input-group">
              <label class="radio-inline"><input type="radio" name="forBorrow" value="t">Yes</label>
              <label class="radio-inline"><input type="radio" name="forBorrow" value="f">No</label>
            </div>
          </div> <!--col-sm-8-->
          <div class="col-sm-4">
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <input type"text" class="form-control" placeholder="Free" disabled/>
            </div>
          </div> <!--col-sm-4-->
        </div> <!--form-group-->

        <div class="form-group">
          <label for="available" class="col-sm-4 control-label">Is it available now?</label>
          <div class="col-sm-8">
            <!-- <input type="available" class="form-control" name="available" placeholder="Is this available?(True/False)"> -->
            <div class="input-group">
              <label class="radio-inline"><input type="radio" name="available" value="t">Yes</label>
              <label class="radio-inline"><input type="radio" name="available" value="f">No</label>
            </div>
          </div> <!--col-sm-8-->
        </div> <!--form-group-->

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="form-control btn btn-success btn-md">Create Listing</button>
          </div> <!--col-sm-8-->
        </div> <!--form-group-->


      </div> <!-- form-horizontal -->
    </form>

  </div><!-- col-md-5 -->
</div> <!-- container-fluid -->

<% include includes/footer.ejs %>
</body></html>