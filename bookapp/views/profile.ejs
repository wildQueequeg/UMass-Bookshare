<!-- views/profile.ejs -->
<!DOCTYPE html>
<html><head>
  <title>Profile Page</title>
  <% include includes/header.ejs %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>

<body>
  <% include partials/navbarlogin.ejs %>
  <div class="container">
  
    <div class="row">
      <% include partials/sidebar.ejs %>
      <% include partials/searchbar.ejs %>

      <!-- Profile info -->
      <div class="row-fluid col-sm-10 col-sm-offset-3 col-md-12 col-md-offset-2 main">
        
        <h1 class="page-header"><%= fname %> <%= lname %></h1>
        <!-- <h1 class="page-header"><%= username %>'s seller profile</h1> -->
        <!-- profile picture -->
          <div class="col-md-5">
            <img data-src="holder.js/200x200/auto/vine" class="img-thumbnail" alt="200x200" src="data:image/svg+xml;base64," data-holder-rendered="true">
          </div> <!--col-md-3 col-md-offset-2-->

        <!--Profile info-->
        <div class="col-md-5">
          <form>
            <div class="form-horizontal">

              <h4>Username</h4>              
              <p><%= username %></p>

              <h4>Email</h4>
              <p><%= email %></p>

              <h4>Phone</h4>
              <p><%= phone %></p>                

              <h4>School</h4>
              <p><%= school %></p>

            </div>
          </form>   

        </div><!--col-md-5-->

      </div><!-- col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main -->

      <!-- Items -->
      <div class="row">
        <div class="col-sm-9 col-sm-offset-3 col-md-12 col-md-offset-2 main">

          <!-- Add script to get different fields?? -->
          <!-- Selling Snippets -->
          <h2>Selling</h2>
          <p><%= username %> is selling these books</p>
          <div class="row placeholders">
            <% for(var i = 0; i < 4; i++) { %>
              <% include partials/sellingsnippet.ejs %>
            <% } %>
          </div> <!--row placeholders-->
          <p><a class="btn btn-default" href="#" role="button">See More »</a></p>
          
          <!-- Add script to get different fields?? -->
          <!-- Wishlist Snippets -->
          <h2>Wishlist</h2>
          <p><%= username %> is look for these books</p>
          <div class="row placeholders">
            <% for(var i = 0; i < 4; i++) { %>
              <% include partials/wishlistsnippet.ejs %>
            <% } %>
          </div> <!--row placeholders wishlistsnips-->
          <p><a class="btn btn-default" href="#" role="button">See More »</a></p>
          
        </div>
      </div><!--row-Selling & Wishlist-->

    </div> <!--row-->
  </div><!-- /.container-fluid -->

  <% include includes/footer.ejs %>
</body></html>